@model List<Nsted.Models.Kunde>

<link rel="stylesheet" href="~/css/KundeList.css" />

<h2>Kundeoversikt</h2>

<table class="table">
    <thead>
        <tr>
            <th>Kundenr</th>
            <th>Fornavn</th>
            <th>Etternavn</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Registrert</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Fornavn</td>
                <td>@customer.Etternavn</td>
                <td>@customer.Telefon</td>
                <td>@customer.Email</td>
                <td>@customer.Registrert</td>
                <td>
                    <a href="@Url.Action("Edit", "Kunde", new { id = customer.Id })" class="btn btn-primary">Rediger</a>
                    <a href="@Url.Action("Delete", "Kunde", new { id = customer.Id })" class="btn btn-danger"
                       onclick="return confirmDeletion('@customer.Fornavn','@customer.Etternavn');">Slett</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDeletion(firstName, lastName) {
        return confirm("Er du sikker på at du vil slette " + firstName + " " + lastName + "?");
    }
</script>



