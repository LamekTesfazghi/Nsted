<link rel="stylesheet" href="~/css/RegisterPage.css">

@model Nsted.Models.UserRegistrationModel

<div class="overlay-register"></div>

<div class="register-container">
    <h3>Velkommen</h3>
    <h4>Lag en bruker hos Nosted& AS for å fortsette til den administrative siden.</h4>
    <form asp-action="Register" asp-controller="Account" method="post">
        <!-- Email input -->
        <div class="form-outline mb-2">
            <input asp-for="Email" type="email" class="form-input"
                   placeholder="Oppgi en gyldig e-post adresse" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-1">
            <input asp-for="Password" type="password" class="form-input"
                   placeholder="Enter password" />
        </div>

        <!-- Confirm Password input -->
        <div class="form-outline mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-input"
                   placeholder="Confirm password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Registration Link -->
        <div class="text-center mt-2 pt-1">
            <a href="@Url.Action("Login", "Account")" class="additional-link">Eksisterende bruker?</a>
        </div>

        <!-- Register Button -->
        <div class="text-center text-lg-start mt-2 pt-1">
            <button type="submit" class="register-button">Registrer deg</button>
        </div>
    </form>
</div>
