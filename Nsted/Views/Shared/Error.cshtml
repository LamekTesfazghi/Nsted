@model ErrorViewModel
@{
    // Setter sidetittelen til "Feil"
    ViewData["Title"] = "Feil";
}

<!-- Viser en overskrift for feilen -->
<h1 class="text-danger">Feil.</h1>
<h2 class="text-danger">Det oppstod en feil under behandlingen av forespørselen din.</h2>

<!-- Viser feildetaljer hvis tilgjengelig -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <h3>Feildetaljer</h3>
    <p><strong>Melding:</strong> @Model.ErrorMessage</p>
}

<!-- Viser stakkspor hvis tilgjengelig -->
@if (!string.IsNullOrEmpty(Model.StackTrace))
{
    <p><strong>Stakkspor:</strong></p>
    <pre>@Model.StackTrace</pre>
}

<!-- Viser forespørsels-ID hvis tilgjengelig -->
@if (Model.ShowRequestId)
{
    <p>
        <strong>Forespørsels-ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<!-- Viser melding om indre unntak hvis tilgjengelig -->
@if (!string.IsNullOrEmpty(Model.InnerExceptionMessage))
{
    <p><strong>Melding om indre unntak:</strong> @Model.InnerExceptionMessage</p>
}

<!-- Viser informasjon om utviklingsmodus -->
<h3>Utviklingsmodus</h3>
<p>
    Å bytte til <strong>Utviklings</strong> miljø vil vise mer detaljert informasjon om feilen som oppstod.
</p>
<p>
    <strong>Utviklingsmiljøet bør ikke aktiveres for distribuerte applikasjoner.</strong>
    Det kan føre til at sensitive opplysninger fra unntak blir vist for sluttbrukere.
    For lokal feilsøking, aktiver <strong>Utviklings</strong> miljøet ved å sette miljøvariabelen <strong>ASPNETCORE_ENVIRONMENT</strong> til <strong>Utvikling</strong>
    og start appen på nytt.
</p>

