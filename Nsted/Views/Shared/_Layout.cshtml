<!-- Layouten til hovedmenyen -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nsted</title>
    <!-- Linker til forskjellige stylesheets som siden bruker -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Navbarstyle.css" />
    <link rel="stylesheet" href="~/Nsted.styles.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom-color navbar-custom-text-color">
            <!-- Starten av navigasjonsmenyen. -->
            <div class="container-fluid">
                <!-- Nsted logo og navigasjon. -->
                <a class="nav-link custom-button" asp-area="" asp-controller="Home" asp-action="Homepage">Nsted</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Hovedmenyen. -->
                <ul class="navbar-nav">
                    <!-- Service-dropdown. -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" aria-expanded="false">
                            Service
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Ansatt" asp-action="Registrering">Registrering</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Ansatt" asp-action="NyService">Nytt Serviceskjema</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Ansatt" asp-action="ListFullførteOrdrer">Ferdige Ordrer</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- Andre deler av hovedmenyen. -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <!-- Lagerbeholdning. -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Lagerbeholdning">Lagerbeholdning</a>
                        </li>
                        <!-- Arbeidsdokumenter-dropdown. -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="skjemaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Arbeidsdokumenter
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="skjemaDropdown">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Ansatt" asp-action="ListRegistrering">Registrering skjema</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Ansatt" asp-action="ListServiceSkjema">Service skjema</a></li>
                                <li><hr class="dropdown-divider"></li>
                            </ul>
                        </li>
                        <!-- Kundebehandling-dropdown. -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kundeDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kundebehandling
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Kunde" asp-action="Add">Legg til kunde</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Kunde" asp-action="List">Liste over kunder</a></li>
                                <li><hr class="dropdown-divider"></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- Logg inn knappen. -->
                <a class="nav-link custom-button-login" asp-area="" asp-controller="Account" asp-action="Login">
                    <img src="/images/Loginlogo.png" alt="Login" style="width: 20px; height: 20px; margin-right: 20px;" />
                </a>
            </div>
        </nav>
    </header>
    <!-- Hovedinnholdet. -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Rendrer hovedinnholdet for siden. -->
            @RenderBody()
        </main>
    </div>
    <!-- Skriptreferanser. -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Dynamisk rendring av seksjoner for skriptreferanser. -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
